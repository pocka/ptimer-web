{
	"compilerOptions": {
		"strict": true,
		"lib": ["DOM", "ES2020"],
		"module": "ES2020",
		"moduleResolution": "Bundler",
		"target": "ES2020",
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"noEmit": true,
		"paths": {
			"@/*": ["./src/*"]
		},
		"types": ["vite/client"]
	},
	"include": ["./**/*.ts", ".storybook/**/*.ts"],
	"exclude": ["./build", "node_modules"]
}
