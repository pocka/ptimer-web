root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab

[*.md]
trim_trailing_whitespace = false

# YAML cannot handle tabs
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Align to `gleam format`, it cannot be configured to use tabs
[*.gleam]
indent_style = space
indent_size = 2
